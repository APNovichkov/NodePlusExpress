
<!-- home.handlebars -->
<div class='text-center' style='padding-top: 200px;'>
    <h1>Search for GIFS</h1>
    <form action="/">
      <input style='height: 37px;' type="text" name="term">
      <button class='btn btn-dark' type="submit">Search</button>
    </form>
</div>

<div class='text-center' style='padding-top: 60px;'>
    <div class="row">
        {{#each gifs}}
            <div class="col-md-4">
                <div class="tenor-gif-embed" data-postid="{{this.id}}" data-share-method="host" data-width="500px"
                  data-aspect-ratio="1.2266666666666666"><a
                      href="{{this.itemurl}}"></a>
                  <a href="{{this.url}}"></a></div>
                <script type="text/javascript" async src="https://tenor.com/embed.js"></script>
            </div>
        {{/each}}
    </div>

</div>
